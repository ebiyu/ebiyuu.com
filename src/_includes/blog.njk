---
layout: site.njk
---

<main>
  <h1 class="BlogTitle">{{ title }}</h1>
  <div class="BlogDate">{{ date | formatDate }}</div>

  <div class="TagList">
  {% for tag in tags %}
    <a class="Tag" href="/tag/{{ tag }}">
      {{ tag }}
    </a>
  {% endfor %}
  </div>

  {% if content | toc %}
  <div class="BlogToc">
    <h3>目次</h3>
    {{ content | toc | safe }}
  </div>
  {% endif %}

  <div class="md-content">
    {{ content | safe}}

    {% if backlinks | length %}
    <h2>バックリンク</h2>
    <ul>
      {% for backlink in backlinks %}
        <li>
          <a href="{{ backlink.url }}">
            {{ backlink.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
    {% endif %}

  </div>
</main>
